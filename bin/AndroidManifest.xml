<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.huidongtech.hdcurve"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".HDCurveApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".view.WelcomeActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.user.UserActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".view.user.UserEditActivity"
            android:screenOrientation="landscape"
            android:theme="@style/MyDialogStyle"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name=".view.data.DataManagerActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".view.components.AlertActivity"
            android:screenOrientation="landscape"
            android:theme="@style/MyDialogStyle" >
        </activity>
    </application>

</manifest>